<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    </head>
    <body>
        <nav class="navbar navbar-expand navbar-dark bg-dark">
            <a class="navbar-brand" href="{{ path('channel_index') }}">Index</a>
            <ul class="navbar-nav mr-auto">
                {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('logout')}}">ログアウト</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('login')}}">ログイン</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('user_registration')}}">ユーザー登録</a>
                    </li>
                {% endif %}
            </ul>
        </nav>

        {% block body %}
            <div id='app'></div>
        {% endblock %}
        {% block javascripts %}
            <script src="{{asset('js/test.js')}}"></script>
        {% endblock %}
    </body>
</html>
